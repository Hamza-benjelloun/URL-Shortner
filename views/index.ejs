<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortner</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1>URL Shortner</h1>
        <form action="/shortUrls" method="POST" class="my-4 form-inline">
            <label for="fullUrl" class="sr-only" >Url</label>
            <input required placeholder="Enter the url" type="url" name="fullUrl" id="fullUrl" class="form-control mr-2 col">
            <button class="btn btn-success" type="submit">Shrink</button>
        </form>
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(element => { %>    
                    <tr>
                        <td><a href="<%= element.full %>"><%= element.full %></a></td>
                        <td><a href="<%= element.short %>"><%= element.short %></a></td>
                        <td><%= element.click %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>